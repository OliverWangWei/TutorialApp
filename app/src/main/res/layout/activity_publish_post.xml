<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:orientation="vertical"
    tools:context="com.example.jiamoufang.tutorialapp.ui.activities.PublishPostActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@id/tool_bar"
        android:layout_height="wrap_content">
        <include layout="@layout/include_navi"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edt_post_content"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_edit_text_bg"
        android:hint="请输入内容"
        android:paddingLeft="14sp"
        android:textColor="#B4B4B4"
        android:textSize="15sp"/>


    <Button

        android:id="@+id/btn_publish"
        android:background="@drawable/bt_logout_shap"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="发布"/>

</LinearLayout>



